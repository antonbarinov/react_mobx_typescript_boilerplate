{
    "strict": true,
    "include": ["./src"],
    "compilerOptions": {
        "sourceMap": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "ES5",
        "module": "ES2015",
        "moduleResolution": "Node",
        "removeComments": true,
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "downlevelIteration": true
    }
}
